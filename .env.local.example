# =============================================================================
# DonateDAO Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Cardano Network Configuration
# -----------------------------------------------------------------------------
# Network: 'preprod' for testing, 'mainnet' for production
NEXT_PUBLIC_NETWORK=preprod

# Blockfrost API Key (get from https://blockfrost.io)
# Required for blockchain queries
NEXT_PUBLIC_BLOCKFROST_API_KEY=your_blockfrost_api_key_here

# -----------------------------------------------------------------------------
# IPFS Configuration (Optional)
# -----------------------------------------------------------------------------
# IPFS gateway for storing campaign images
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# -----------------------------------------------------------------------------
# Email Service (Brevo/Sendinblue)
# -----------------------------------------------------------------------------
# API key for sending OTP emails (get from https://brevo.com)
# Required for email verification and password reset
BREVO_API_KEY=your_brevo_api_key_here

# -----------------------------------------------------------------------------
# Optional: Analytics & Monitoring
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# -----------------------------------------------------------------------------
# Optional: Feature Flags
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_ENABLE_HYDRA=false
# NEXT_PUBLIC_ENABLE_ML_VERIFICATION=true

# -----------------------------------------------------------------------------
# Telegram Bot Integration (Optional)
# -----------------------------------------------------------------------------
# Bot token from BotFather (get from https://t.me/BotFather)
# Required for human agent support integration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Agent chat ID (get by visiting /api/telegram/get-chat-id after sending a message to bot)
# Required for routing messages to the support agent
TELEGRAM_AGENT_CHAT_ID=your_agent_chat_id_here

# Public app URL (for webhook setup)
# Automatically detected on Vercel, set manually for other deployments
NEXT_PUBLIC_APP_URL=https://your-domain.com
